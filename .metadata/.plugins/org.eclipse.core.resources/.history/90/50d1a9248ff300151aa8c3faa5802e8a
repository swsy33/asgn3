import java.io.BufferedReader;
import java.io.FileReader;
import java.io.IOException;
/*convert graph file into 2D array*/
public class MapConverter {
	String[][] graph;
	
	public MapConverter(String filename)
	{
		this.graph = readFile(filename);
	}
	
	private String[][] readFile(String filename) 
	{
		
		int row = 0;
		int col = 0;
		try(BufferedReader br = new BufferedReader(new FileReader(filename))) 
		{
			
		    //StringBuilder sb = new StringBuilder();
			String line = br.readLine();
			while(line != null)
			{
			    ++row;
			   if(line.length() > col)
				   col = line.length();
			   line = br.readLine();
			}
			System.out.println("row # and col #: " + row + ", " +col );
			String[][] result = new String[row][col];
			
		    while (line != null) {
		        //sb.append(line);
		       // sb.append(System.lineSeparator());
		    	//each char into 2D array
		    	String[] singleRow = line.trim().split("(?!^)");
		    	col = singleRow.length;
		    	
		        line = br.readLine();
		    }
		    String everything = sb.toString();
		} catch (IOException e) {
			// TODO Auto-generated catch block
			System.out.println("no file exits!");
		}
		
	}

}
